@using ProjetoAula.Entidades
@{
	var clientes = (List<Cliente>)ViewBag.Clientes;
}
<form asp-action="Form" asp-controller="Cliente" method="get">
	<button type="submit" class="btn btn-primary">Novo</button>
</form>

<table class="table table-striped">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">Razão Social</th>
			<th scope="col">Inscrição Federal</th>
			<th scope="col">Rua</th>
			<th scope="col">Bairro</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@{
			foreach (var cliente in clientes)
			{
				<tr>
					<th scope="row">@cliente.Id</th>
					<td>@cliente.RazaoSocial</td>
					<td>@cliente.InscricaoFederal</td>
					<td>@cliente.Endereco.Rua</td>
					<td>@cliente.Endereco.Bairro</td>
                    <td>
                        <a href="Editar?Id=@cliente.Id"><i class="bi bi-pencil-fill"></i></a>
                        <a href="Excluir?Id=@cliente.Id"><i class="bi bi-trash3-fill"></i></a>
                    </td>
				</tr>
			}
		}



	</tbody>
</table>
